# Google AI API Key for Genkit (required for AI assistant)
GOOGLE_GENAI_API_KEY="your_google_ai_api_key_here"

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY="your_firebase_api_key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your_project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your_project_id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your_project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your_sender_id"
NEXT_PUBLIC_FIREBASE_APP_ID="your_app_id"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3001"

# Mapbox API Key (required for map display)
NEXT_PUBLIC_MAPBOX_API_KEY="your_mapbox_api_key_here"

# Geoapify API Key (required for geocoding - finding addresses)
NEXT_PUBLIC_GEOAPIFY_API_KEY="your_geoapify_api_key_here"

# OpenRouteService API Key (FREE 2000 requests/day - Primary routing)
NEXT_PUBLIC_OPENROUTE_API_KEY="your_openroute_api_key_here"

# GraphHopper API Key (FREE 500 requests/day - Secondary routing)
NEXT_PUBLIC_GRAPHHOPPER_API_KEY="your_graphhopper_api_key_here"

# Paystack Keys (for payment processing)
PAYSTACK_PUBLIC_TEST_KEY="pk_test_your_paystack_public_key_here"
PAYSTACK_SECRET_TEST_KEY="sk_test_your_paystack_secret_key_here"
PAYSTACK_SECRET_KEY="sk_test_your_paystack_secret_key_here"

# IMPORTANT: Environment Variable Syntax Rules
# 1. No spaces around the equals sign: VARIABLE_NAME="value"
# 2. Use quotes for values with spaces or special characters
# 3. Variable names must start with letter/underscore, contain only letters, numbers, underscores
# 4. No comments on the same line as variables
# 5. Each variable on its own line
